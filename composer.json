{
    "name": "vadimcontenthunter/my-db",
    "description": "my database",
    "license": "GPL-3.0-only",
    "authors": [
        {
            "name": "Vadim",
            "email": "project.k.vadim@gmail.com"
        }
    ],
    "require": {
        "psr/log":"^3.0"
    },
    "require-dev": {
        "squizlabs/php_codesniffer": "^3.7",
        "phpunit/phpunit": "^9.5.16",
        "phpstan/phpstan": "^1.9"
    },
    "autoload": {
        "psr-4": {
            "vadimcontenthunter\\MyDB\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "vadimcontenthunter\\MyDB\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "phpcs": [
            "./vendor/bin/phpcs"
        ],
        "phpunit": [
            "./vendor/bin/phpunit"
        ],
        "phpstan": [
            "./vendor/bin/phpstan analyse"
        ]
    }
}
